<div class="container">
	<p class="text-center">
		<img src="./assets/img/burger1.png" alt='yummy burger'>
	</p>

	<h2 class="text-center">Eat-Da-Burger!!!</h2>
 </div>
<hr>
<div class="container">
<div class="row">
  	<div class="col-md-6">Column1
		<form>
			<div class="form-group">
				<ul>
					{{#each burgers}}
						{{#unless this.devoured}}
							<li>
								{{this.burger_name}}
								<form class="list-inline" action="/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button type="submit" class="btn btn-primary btn-sm">Chow Time!</button>
								</form>

							</li>
						{{/unless}}
	  				{{/each}}
	  			</ul>
		  	</div>
		</form>
	</div>
  	<div class="col-md-6 move-right">Column3</div>
</div>
</div>






<ul>
	{{#each burgers}}
		{{#unless this.devoured}}
			<li>
				{{this.burger_name}}
				<form action="/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="true">
					<button type="submit">Chow Time!</button>
				</form>
  			</li>
  		{{/unless}}
  	{{/each}}
</ul>

<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.burger_name}}
				<form action="/{{this.id}}?_method=PUT" method="POST">
					<input type="hidden" name="devoured" value="false">
					<button type="submit">Yum, It was delicious!</button>
  				</form>
  			</li>

  		{{/if}}
  	{{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

	<div class="form-group">
		<label for="burge">Name-da-burger?</label><br>
		<input type="text" name="burger_name" placeholder="Name-da-burger!"<br>
	</div>

	<button type="submit">Add Burger</button>
</form>

