<div class="container">
<div class="row">
  	<div class="col-md-6">Column1
		<form>
			<div class="form-group">
				<ul>
					{{#each burgers}}
						{{#unless this.devoured}}
							<li>
								{{this.burger_name}}
								<form class="list-inline" action="/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="devoured" value="true">
									<button type="submit" class="btn btn-primary btn-sm">Chow Time!</button>
								</form>

							</li>
						{{/unless}}
	  				{{/each}}
	  			</ul>
		  	</div>
		</form>
	</div>
  	<div class="col-md-6 move-right">Column3</div>
</div>
</div>





<div class="container">
